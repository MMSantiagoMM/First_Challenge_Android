<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IMDb2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- PRIMARY COLOR -->
        <item name="colorPrimary">@color/yellow</item>
        <!-- BACKGROUND -->
        <item name="background">@color/light_grey</item>
        <!-- SURFACE -->
        <item name="colorSecondary">@color/white</item>
        <!-- ON SURFACE -->
        <item name="colorOnSurface">@color/black</item>
        <!-- ON BACKGROUND -->
        <item name="colorOnBackground">@color/dark_grey</item>
        
        
    </style>

    <style name="Theme.IMDb2" parent="Base.Theme.IMDb2" />
    
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/yellow</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.IMDb2</item>

    </style>
</resources>