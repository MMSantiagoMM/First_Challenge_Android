<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textViewUserPassLogin">
        <item name="android:textSize">@dimen/user_password</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="inputUserPassword">
        <item name="android:padding">@dimen/paddingInputs</item>
        <item name="android:layout_width">@dimen/width_inputs</item>
        <item name="android:layout_height">@dimen/height_inputs</item>
    </style>

    <style name="forgetPassword">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/forget_password</item>
        <item name="fontFamily">@font/roboto_light_italic</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="buttonLoginAcept">
        <item name="android:layout_width">@dimen/width_inputs</item>
        <item name="android:layout_height">@dimen/height_inputs</item>
        <item name="android:enabled">false</item>
        <item name="android:textSize">@dimen/login</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>